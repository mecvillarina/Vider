@inherits LayoutComponentBase

@namespace Client.App.Shared

@inject Microsoft.Extensions.Localization.IStringLocalizer<AuthLayout> localizer

<MudThemeProvider Theme="CurrentTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudContainer MaxWidth="MaxWidth.False" Class="pa-0 ma-0 d-flex align-center justify-center background-dark" Style="@($"width:100vw; {HeightStyle}")">
    <MudContainer MaxWidth="MaxWidth.Large" Class="pa-0 ma-8 background">
        <MudGrid Spacing="0">
            <MudItem xs="0" md="8">
                <MudHidden Breakpoint="Breakpoint.SmAndDown">
                    <MudLayout Class="background-dark">
                        <div style="background-image: url(https://cdn.nftdev.vider.social/web-assets/photograph.gif); background-size: cover;background-position: right center; width:100%; height: 100%;">
                            <div class="d-flex align-end pa-4" style="background: rgba(183,158,96,0.6); width:100%; height: 100%;">
                                <img style="width:50px;height:50px;" src="@AppConstants.XRPLogo" />
                                <img style="height:50px;" class=" ml-6" src="@AppConstants.AppLogo" />
                            </div>
                        </div>
                    </MudLayout>
                </MudHidden>
            </MudItem>
            <MudItem xs="12" md="4">
                @Body
            </MudItem>
        </MudGrid>
    </MudContainer>
</MudContainer>